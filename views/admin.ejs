<%- include('templates/header') %>

  <body class="center">
  <div class="spinner-border"></div>
  <div id="admin_page" class="contenu wrapper align-items-stretch">
	        <%- include('templates/sidebar') %>

	        <!-- Page Content  -->
			<div id="content" class="">
				<%- include('templates/topbar') %>

				<!-- Zone 2 -->
				<%- include('templates/dashboard') %>
				<div class="content2" style="display: none">
					<p id="p0">Application's Folders (<%=candidates.length%>)</p>
					<table class="table table-borderless datatable"><!---->
                        <thead><tr>
                            <% let fields = ["#","Nom","Number","Cycle","Creation Date","Submission Date","Folder","Actions"]
                            fields.forEach(field => {%>
                                <th scope="col"><%= field%></th>
                            <%}) %>
                        </tr></thead>
                        <tbody></tbody>
					</table>

					<!-- <form id="upload">
						<div>
							<input type="file" name="file" class="upload-input"/>
							<input type="text" class="upload-text" style="
							font-weight: bold; font-style: italic; color: black" value="15"/>
						</div>
						<input type="submit" class="upload-submit btn btn-primary" value="send"/>
					</form> -->

					<p id="p1">
						<!-- Documents Modal -->
					 <div class="modal fade" id="documentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLongTitle">Documents</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
								</div>
							</div>
						</div>
					</div>

					<!-- Mail Modal -->
					<div class="modal fade mail_" id="mailModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
						<div class="modal-dialog" role="mail">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLongTitle">Send an e-mail</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
									<form id="email-form">
										<input type="hidden" name="token" value="<%=token%>">
										<input type="hidden" name="status" value="<%=status%>">
										<div class="email-form-item">
											<label>Email:</label><input required type="text" class="form-control1" name="to">
										</div>
										<div class="email-form-item">
											<label>Subject:</label><input required type="text" class="form-control1" name="subject">
										</div>
										<div class="email-form-item">
											<label>Message:</label><textarea required class="form-control1" name="message" rows="8"></textarea>
										</div>
										<div class="email-form-item-submit">
											<input type="submit" class="btn btn-info btn-sm" value="send"/>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>

					<!-- Unlock Modal -->
					<div class="modal fade mail_" id="unlockModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
						<div class="modal-dialog" role="mail">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLongTitle">Send an e-mail</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
									<form id="unlock-form">
										<input type="hidden" name="token" value="<%=token%>">
										<input type="hidden" name="status" value="<%=status%>">
										<input type="hidden" name="id" value="">
										<div class="email-form-item">
											<label>Email:</label><input required type="text" class="form-control1" name="to">
										</div>
										<div class="email-form-item">
											<label>Subject:</label><input required type="text" class="form-control1" name="subject">
										</div>
										<div class="email-form-item">
											<label>Message:</label><textarea required class="form-control1" name="message" rows="8"></textarea>
										</div>
										<div class="email-form-item-submit">
											<input type="submit" class="btn btn-info btn-sm" value="send"/>
										</div>
									</form>
								</div>
							</div>
						</div>
					</div>

					<!-- Payment Modal -->
					<div class="modal fade" id="paymentModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
						<div class="modal-dialog" role="document">
							<div class="modal-content">
								<div class="modal-header">
									<h5 class="modal-title" id="exampleModalLongTitle">Payment Informations</h5>
									<button type="button" class="close" data-dismiss="modal" aria-label="Close">
										<span aria-hidden="true">&times;</span>
									</button>
								</div>
								<div class="modal-body">
								</div>
								<div class="modal-footer">
									<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
								</div>
							</div>
						</div>
					</div>


					</p>
				</div>
			</div>



	  <!-- Floating to top button -->
	  <i class="fa fa-angle-up rounded-circle floating"></i>

	  <!-- Snackbar -->
	  <div id="snackbar"></div>

	  <!-- Cover -->
	  <div id="cover" class="js-fullheight js-fullwidth">
		  <img src="../assets/images/adminLoading.gif"/>
	  </div>

  </div>

<%- include('templates/footer') %>
